<!DOCTYPE html>
<html>

<head>
  <title>Driver Dashboard</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>

<body data-page="driver">
  <div class="container-fluid">
    <h3 class="my-3">Driver Dashboard</h3>

    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <h5 class="card-title">Driver Info</h5>

        <p><strong>Driver:</strong>
          <%= driverName %>
        </p>
        <p><strong>Bus:</strong>
          <%= busNumber %>
        </p>
        <p><strong>Route:</strong>
          <%= routeName %>
        </p>

        <span class="badge badge-secondary" id="driverStatus">Offline</span>
      </div>
    </div>

    <div class="mb-3">
      <button id="goLiveBtn" class="btn btn-success mr-2">
        <i class="fas fa-play"></i> Go Live
      </button>

      <button id="goOfflineBtn" class="btn btn-danger" disabled>
        <i class="fas fa-stop"></i> Stop Live
      </button>
    </div>

    <div class="alert alert-info py-2" id="routeInfo">
      Distance: -- km | ETA: -- min
    </div>

    <div id="arrivalStatus" class="text-success font-weight-bold"></div>

    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div id="map"></div>
      </div>
    </div>
  </div>

  <script>
    window.DRIVER_INFO = {
      busNumber: "<%= busNumber %>",
      routeName: "<%= routeName %>",
      driverName: "<%= driverName %>"
    };
  </script>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="/js/leaflet.js"></script>
  <script src="/js/socketDriver.js"></script>

</body>

</html>