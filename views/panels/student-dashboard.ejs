<!DOCTYPE html>
<html>

<head>
  <title>Student Dashboard</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>

<body data-page="student">
  <div class="container-fluid">
    <h3 class="my-3">Student Dashboard</h3>

    <!-- Card -->
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <h5 class="card-title">Track Bus</h5>

        <div class="form-group">
          <!-- <label>Bus Number</label> -->
          <select id="busSelect" class="form-control">
            <option value="">Select Bus</option>
          </select>
        </div>

        <button id="trackBusBtn" class="btn btn-primary mt-3" disabled>
          <i class="fas fa-location-arrow"></i> Track Bus
        </button>

        <p id="busStatus" class="mt-2 text-muted"></p>
      </div>
    </div>

    <!-- Info -->
    <div class="alert alert-info py-2" id="routeInfo">
      Distance: -- km | ETA: -- min
    </div>

    <div id="arrivalStatus" class="text-success font-weight-bold"></div>

    <!-- Map -->
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div id="map"></div>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="/js/leaflet.js"></script>
  <script src="/js/socketStudent.js"></script>

</body>

</html>